extends ../layout
  a.btn.btbn-success(href="/users/create") Nuevo Usuario

  br
  br

  table.table 
    thead 
      tr 
        th(scope='col') # 
        th(scope='col') Nombre 
        th(scope='col') Email
        th(scope='col') Verificado
        th(scope='col') 
        th(scope='col') 
    tbody
      each usuario in usuarios
        tr 
          td(scope='row')
            = usuario.id 
          td= usuario.nombre 
          td= usuario.email 
          td= usuario.verificado ? 'SI' : 'NO'
          td 
            a.btn(href="users/" + usuario.id + "/update") Editar 
          td 
            form.inline(method="post", action="users/" + usuario.id + "/delete")
              input(type="hidden", name="id", value= usuario.id)
              button.link-button.btn-danger(type="submit", name="submit_param", value=) 
